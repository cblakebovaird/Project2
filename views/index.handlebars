<div id="home">

  <div class="container" id="indexJumbotron">
    <h1 class="display-4">K()DEX</h1>

    <p class="lead">A social media platform where programmers of all skill levels can freely share code and ideas</p><br><br>
    <a class="btn btn-primary btn-lg" href="newuser" role="button" id="newAccount">Create Account</a>
    <button class="btn btn-primary btn-lg" role="button" id="loginBtn" data-toggle="modal" data-target="#indexModal">Log
      in</button>
  </div>

  <div class="modal fade" id="indexModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Login Credentials</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="loginContainer">

            <div class="container">

              <div class="col-8 offset-2">
                <form class="clearfix mb-4" action="POST">
                  <div class="form-group">
                    <label for="example-text">Username</label>
                    <input type="text" id="example-text" class="form-control" aria-describedby="example-text"
                      placeholder="John Doe">
                  </div>
                  <div class="form-group">
                    <label for="example-description">Password</label>
                    <textarea class="form-control" id="example-description" aria-describedby="example-description"
                      placeholder="blah123"></textarea>
                  </div>
                </form>
              </div>
            </div>



          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button class="btn btn-primary" href="/landing" role="button">Log In</button>
          </div>
        </div>
      </div>
    </div>

  </div>

